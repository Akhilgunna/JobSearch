<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <EditText
            android:id="@+id/search"
            android:hint="Enter Title_name or Location or Salary"
            android:drawableLeft="@drawable/ic_search"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" >
            <requestFocus />

        </EditText>


        <RadioGroup
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:orientation="horizontal">



            <RadioButton
                android:id="@+id/radio_part_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parat Time"
                android:layout_weight="1"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radio_full_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Full Time"
                android:checked="false" />

        </RadioGroup>


        <!--<Button
            android:id="@+id/btn_part_time"
            android:background="@drawable/edittext_search"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="       Part_time     "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_full_time"
            android:background="@drawable/edittext_search"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="     Full_time    "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Location  :" />

        <EditText
            android:id="@+id/et_location"
            android:background="@drawable/edittext_search"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:hint="Enter Location                                      "
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Salary  :" />

        <Button
            android:id="@+id/btn_salary_start"
            android:background="@drawable/edittext_search"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="     15K to 20K     "
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_salary_end"
            android:background="@drawable/edittext_search"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:text="     25K to 30K     "
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button1_rounded"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />



    <ListView
        android:id="@+id/list_view"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>