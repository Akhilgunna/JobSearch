
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableLayout
    android:layout_marginTop="50dp"
    android:id="@+id/tv_layout"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Name :" />

        <EditText
            android:id="@+id/et_name"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="22dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Age  :" />

<!--        <EditText-->
<!--            android:id="@+id/et_age"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginRight="15dp"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:textSize="15dp"-->
<!--            android:padding="8dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->
<!--    -->

        <Spinner
            android:id="@+id/spinner_age"
            android:singleLine="true"
            android:background="@drawable/spinner_rounded"
            android:padding="9dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spin_age"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Experience  :" />

<!--        <EditText-->
<!--            android:id="@+id/et_experience"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_marginRight="15dp"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:textSize="15dp"-->
<!--            android:padding="8dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

        <Spinner
            android:id="@+id/spin_experience"
            android:singleLine="true"
            android:background="@drawable/spinner_rounded"
            android:padding="9dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spin_exp"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>

    </TableRow>

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Email Id  :" />

        <EditText
            android:id="@+id/et_emailid"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Location  :" />

        <EditText
            android:id="@+id/et_location"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<Button
            android:id="@+id/bt_picker"
            android:text="Place Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

    </TableRow>

    <Button
        android:id="@+id/bt_picker"
        android:text="Place Picker"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Location  :" />

        <EditText
            android:id="@+id/et_location"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>-->

    <TableRow
        android:layout_marginBottom="15dp"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_weight="0"
            android:text="Postal Code  :" />

        <EditText
            android:id="@+id/et_postal_code"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <Button
        android:id="@+id/bt_upload_resume"
        android:text="Upload Resume"
        android:padding="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/button1_rounded"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_apply_now"
        android:text="Apply Now"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="120dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="2dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button1_rounded" />
</TableLayout>
</ScrollView>
